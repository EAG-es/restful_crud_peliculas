<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
      
    <persistence-unit name="restful_crudPU" transaction-type="RESOURCE_LOCAL">
            
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
            
        <class>inser.persistence.restful_basedatos.Producto</class>
            
        <class>inser.persistence.restful_basedatos.GamaProducto</class>
            
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
            
        <properties>
                  
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/peliculas?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
                  
            <property name="jakarta.persistence.jdbc.user" value="peliculas"/>
                  
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
                  
            <property name="jakarta.persistence.jdbc.password" value="2021peliculas"/>
                
        </properties>
          
    </persistence-unit>
    
</persistence>
